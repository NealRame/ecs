  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "chai": "^4.3.6",
    "css-loader": "^6.7.1",
    "eslint": "^8.26.0",
    "html-webpack-plugin": "^5.5.0",
    "mocha": "^10.1.0",
    "npm-watch": "^0.11.0",
